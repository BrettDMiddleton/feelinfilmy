<div id="movies-index" class="flex-movie">
  <% @my_movies.each do |movie|%>
      <div class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= movie.poster? ? image_path(movie.poster, height: 300, width: 400, crop: :fill) : 'http://placeholder.it' ; %>');">
      <%= link_to "", movies_show_path(movie), class: "card-link" %>
    </div>
    <%= simple_form_for movie, :url => user_movies_create_path, :method => :get do |t| %>
      <%= t.input :movie_id, as: :hidden, :input_html => { value: movie.id } %>
    <% end %>
  <% end %>
</div>
