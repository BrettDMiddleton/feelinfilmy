<div id="movies-index" class="flex-movie">
  <% @my_movies.each do |movie|%>
      <div class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= movie.poster? ? image_path(movie.poster, height: 300, width: 400, crop: :fill) : 'http://placeholder.it' ; %>');">
      <%= link_to "", movies_show_path(movie), class: "card-link", remote: true %>
    </div>
  <% end %>
</div>

