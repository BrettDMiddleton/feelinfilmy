<div class="wrapper">

	<div class="dashboard-main-container">

		<div class="banner-dashboard">
			<div class="current-user-card">
				<% if current_user.avatar? %>
				<%= image_tag(@user.avatar, :style => "width: 300px; border-radius: 50px;", :class => "card-user-pic") %>
				<% else %>
				<%= image_tag(url="https://vignette.wikia.nocookie.net/tumblr-survivor-athena/images/7/7a/Blank_Avatar.png/revision/latest/scale-to-width-down/477?cb=20161204161729", :style => "width: 300px; border-radius: 50px;", :class => "card-user-pic") %>
				<% end %>
				<div class="card-details">
					<% if current_user.username? %>
					<h2><%= @user.username.upcase %></h2>
					<% else %>
					<h2></h2>
					<% end %>
					<h3>Tags Added: <%= @user.tags.count %> </h3>
				</div>
			</div>
		</div>

		<div class="friend-chat-container row">

			<div class="friends-zone col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h1>FRIENDS</h1>
				<div class="row">
					<% current_user.friendships.each do |friend| %>
					<div class="cards-columns col-xs-6 col-sm-3 col-md-4 col-lg-3">
						<%= link_to( profile_path(friend.id), html_options = {} ) do  %>
						<div class="friend-card-container">
							<div class="friend-card-body">
								<%= image_tag(friend.avatar, :class => "friend-card-photo") %>
								<div class="friend-card-footer">
									<p><%= friend.username.upcase %></p>
								</div>
							</div>
						</div>
						<% end %>
					</div>
					<% end %>
				</div>
			</div>
			<div class="chat-zone col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h1>CHAT</h1>
				<div class="chat-container">
					<div class="chat-title">
						CURRENTLY TALKING TO BIFF TANNEN
					</div>
					<div class="chat-containt">
					</div>
					<div class="chat-footer">
					</div>
				</div>
			</div>
      <div class="tab-row row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 dashboard-tab tab-active" id="dashboard-tab1" onclick="switchTab(event)">MY CATALOGUE</div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 dashboard-tab" id="dashboard-tab2" onclick="switchTab(event)">MY WATCHLIST</div>
        </div>
      </div>

      <!-- TAB MY MOVIES -->
      <div class="bottom-section" id="bottom-section">
        <%= render "my_film_index"%>
        <%= render "my_watchlist_index"%>
      </div>

      <!-- TAB ADD TOWATCHLISTS -->



      <!-- TAB FIND A MOVIE -->
      <div class="col-sm-12">
        <div class="search-bar">
         <div class="search">

          <%= form_tag movies_index_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
           placeholder: "Find a movie"
           %>
           <% end %>
         </div>
       </div>
     </div>

     <!-- TAB EDIT PROFILE -->
     <div class="col-sm-12">
       <div class="edit-profile">
       </div>
     </div>


