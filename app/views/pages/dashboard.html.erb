<div class="wrapper">
	<div class="dashboard-main-container">
		<div class="banner-dashboard">
			<div class="current-user-card">
				<% if current_user.avatar? %>
				<%= image_tag(@user.avatar, :style => "width: 300px; border-radius: 50px;", :class => "card-user-pic") %>
				<% else %>
				<%= image_tag(url="https://vignette.wikia.nocookie.net/tumblr-survivor-athena/images/7/7a/Blank_Avatar.png/revision/latest/scale-to-width-down/477?cb=20161204161729", :style => "width: 300px; border-radius: 50px;", :class => "card-user-pic") %>
				<% end %>
				<div class="card-details">
					<% if current_user.username? %>
					<h2><%= @user.username.upcase %></h2>
					<% else %>
					<h2></h2>
					<% end %>
					<h3>Tags Added: <%= @user.tags.count %> </h3>
				</div>
			</div>
		</div>
		<div class="friend-chat-container">
			<div class="friends-zone">
				<h1>FRIENDS</h1>
				<div class="my-friends">
					<% current_user.friendships.each do |friend| %>
					<div class="">
						<%= link_to( profile_path(friend.id), html_options = {} ) do  %>
						<div class="friend-card-container">
							<div class="friend-card-body">
								<%= image_tag(friend.avatar, :class => "friend-card-photo") %>
								<div class="friend-card-footer">
									<p><%= friend.username.upcase %></p>
								</div>
							</div>
						</div>
						<% end %>
					</div>
					<% end %>
				</div>
			</div>
      <script>
        const switchTab = (event, contain, tab) => {
          const activeContain = document.getElementById(contain);
          const activeTab = document.getElementById(tab);
          if (activeContain.classList.contains('display-none')) {
            document.getElementById('my-catalogue').classList.add("display-none");
            document.getElementById('my-watchlist').classList.add("display-none");
            document.getElementById('dashboard-tab1').classList.remove("tab-active");
            document.getElementById('dashboard-tab2').classList.remove("tab-active");
            activeContain.classList.remove("display-none");
            activeTab.classList.add("tab-active");
          }
          if (false) {
          }
        };
      </script>
      <div class="tab-row row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 dashboard-tab tab-active" id="dashboard-tab1" onclick="switchTab(event, 'my-catalogue', 'dashboard-tab1')">MY CATALOGUE</div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 dashboard-tab" id="dashboard-tab2" onclick="switchTab(event, 'my-watchlist','dashboard-tab2')">MY WATCHLIST</div>
      </div>
    </div>
  </dv>

</div>

<!-- TAB MY MOVIES AND WATCHLIST -->
<div class="bottom-section" id="bottom-section">
  <div class="container container-my-movies" id="my-catalogue">
    <%= render "my_film_index"%>
  </div>
  <div class="container container-my-movies display-none" id="my-watchlist">
    <%= render "my_watchlist_index"%>
  </div>
</div>


<div class="col-sm-12">
  <div class="search-bar">
   <div class="search">
    <%= form_tag movies_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
     placeholder: "Find a movie"
     %>
     <% end %>
   </div>
 </div>
</div>

